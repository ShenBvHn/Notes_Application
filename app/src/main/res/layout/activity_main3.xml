<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtBack"
        android:paddingStart="20sp"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:lineHeight="20sp"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#007AFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/clip_1026"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="55dp"
        android:lineHeight="45sp"
        android:textStyle="bold"
        android:text="Create cards and easy styling"
        android:textAlignment="center"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="700" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview3"
        android:layout_width="110dp"
        android:layout_height="5dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#3A85F7"
        app:cardCornerRadius="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="110dp"
        android:layout_height="5dp"
        android:background="#6E81A0"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="360dp"
    app:cardCornerRadius="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="110dp"
        android:layout_height="5dp"
      android:layout_marginTop="360dp"
        android:background="#CECBD3"
        app:cardCornerRadius="3dp"
        app:layout_constraintLeft_toLeftOf="@id/cardview1"
        app:layout_constraintRight_toRightOf="@id/cardview3"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="347dp"
        android:layout_height="43dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="28dp"
        android:lineHeight="21sp"
        android:text="Making your content legible has never been easier."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="700" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="35dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/btnnext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#007AFF"
            android:text="Get Started" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>